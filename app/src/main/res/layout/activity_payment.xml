<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We would use a library "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="com.android.support:appcompat-v7:{version}"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To implement payment functionality "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How would you implement? "
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category_payment"
        android:textStyle="italic"
        android:textColor="@color/primary_color"
        />

</LinearLayout>